<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragments.FragmentIndividual">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginBottom="30dp"
            android:id="@+id/VMRLogo"
            android:contentDescription="VMR Logo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilIndividualEmail"
            android:layout_below="@id/VMRLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >
            <EditText
                android:id="@+id/etIndividualEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:hint="E-mail"
                android:text="abhijit@vmr.com"
                android:ems="15" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilIndividualPassword"
            android:layout_below="@id/tilIndividualEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >
            <EditText
                android:id="@+id/etIndividualPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="Password"
                android:text="password"
                android:ems="15" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilIndividualPassword"
            android:layout_marginLeft="50dp"
            android:id="@+id/cbIndividualRememberPassword"
            android:text="Remember me"
            android:layout_marginTop="5dp"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_below="@id/cbIndividualRememberPassword"
            android:id="@+id/btnIndividualSignIn"
            android:background="@color/colorPrimary"
            android:text="Sign In"
            />
        <!--android:background="#3b8898"-->
    </RelativeLayout>

</FrameLayout>
